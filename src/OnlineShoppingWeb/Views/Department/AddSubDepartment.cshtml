
@using OnlineShoppingWeb.ViewModels;
@model DepartmentViewModel

<h1> Add New SubDepartment to our store under @Model.DepartmentOfSub.DepartmentId @Model.DepartmentOfSub.Description</h1>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    @Html.HiddenFor(model => model.SubDepartment.DepartmentId, Model.DepartmentOfSub.DepartmentId)
    @Html.LabelFor(model => model.SubDepartment.Description)
    @Html.TextBoxFor(model => model.SubDepartment.Description)
    @Html.ValidationMessageFor(model => model.SubDepartment.Description)

    <input type="submit" value="Add New Department" />
}