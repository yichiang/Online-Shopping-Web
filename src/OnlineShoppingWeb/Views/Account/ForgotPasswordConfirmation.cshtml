@using OnlineShoppingWeb.ViewModels

@{
    ViewBag.Title = "Register";

}

@model ForgotPasswordViewModel
<div class="container">

    <h2>Add Email to retrive your password</h2>
    <hr />
    @using (Html.BeginForm("ForgotPasswordConfirmation", "Account", FormMethod.Post))
    {
        @Html.ValidationSummary()
        @Html.HiddenFor(m => m.Email, Model.Email)
        <div class="form-group">
            @Html.LabelFor(m => m.ComfirmationCode)
            @Html.TextBoxFor(m => m.ComfirmationCode, new { @class = "form-control" })
        </div>

        <input type="submit" value="Register" />
    }
</div>