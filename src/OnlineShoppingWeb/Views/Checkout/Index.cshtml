@using OnlineShoppingWeb.ViewModels
@model CheckoutPageViewModel
<div class="row">
    <div class="col-ms-8">
        <h1>Shipping address</h1>
    </div>
    <div class="col-ms-4">
        @if(Model.ShippingAddress != null)
        {
            <h1>@Model.ShippingAddress</h1>
        }
        else
        {
            using (Html.BeginForm("AddShippingAddress", "Checkout", FormMethod.Post, new { @class = "" }))
            {
                <input type="text" name="ShippingAddress" />

                <button class="change-qty-submit-button" type="submit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Place Order</button>
            }
        }
    </div>
</div>
<div class="row">
    <div class="col-ms-8">
        <h1>Payment method</h1>
    </div>
    <div class="col-ms-4">

    </div>
</div>
<div class="">
    <div class="">
        <h1>Review items and shipping</h1>
    </div>
    <div class="">
        @foreach (var product in Model.Products)
        {
            <h3>@product.Title</h3>
            <h3>@product.Price</h3>
            <h3>@product.Quantity</h3>

        }
    </div>
</div>
<div>
    @using (Html.BeginForm("PlaceOrder", "Checkout", FormMethod.Post, new { @class = "" }))
    {
        <button class="change-qty-submit-button" type="submit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Place Order</button>
    }
    
</div>