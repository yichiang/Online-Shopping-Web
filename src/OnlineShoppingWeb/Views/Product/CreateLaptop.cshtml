<h1> Add New Product to our store</h1>

@using OnlineShoppingWeb.Enities;
@model Laptop
@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control"})
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Price)
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Price)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Brand)
        @Html.TextBoxFor(model => model.Brand, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Brand)
    </div>
    <div class="form-group">

        @Html.LabelFor(model => model.LaptopModel)
        @Html.TextBoxFor(model => model.LaptopModel, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.LaptopModel)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HardDriveSize)
        @Html.TextBoxFor(model => model.HardDriveSize, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.HardDriveSize)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AvgCustomerReview)
        @Html.TextBoxFor(model => model.AvgCustomerReview, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.AvgCustomerReview)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HardDrive)
        @Html.DropDownListFor(model => model.HardDrive, Html.GetEnumSelectList(typeof(HardDriveType)))
        @Html.ValidationMessageFor(model => model.HardDrive)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Processor)
        @Html.DropDownListFor(model => model.Processor, Html.GetEnumSelectList(typeof(ProcessorType)))
        @Html.ValidationMessageFor(model => model.Processor)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Condition)
        @Html.DropDownListFor(model => model.Condition, Html.GetEnumSelectList(typeof(ConditionType)))
        @Html.ValidationMessageFor(model => model.Condition)
    </div>

    <div class="form-group">
        <input type="submit" value="Add New Laptop" />
    </div>
        }
